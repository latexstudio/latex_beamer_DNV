\definecolor{progressbar green}{RGB}{63,156,53}

\setbeamercolor{normal text}{fg=black!95!white}
\setbeamercolor{alerted text}{fg=dnvgreen}
\setbeamercolor{example text}{fg=dnvskyblue}

\definecolor{section head color}{RGB}{255,255,255}
\setbeamercolor*{titlelike}{fg=white}
\setbeamercolor*{frametitle}{fg=dnvdarkblue}
\setbeamercolor{subtitle}{fg=dnvdarkblue}

\setbeamercolor{structure}{fg=dnvskyblue}
\setbeamercolor*{palette primary}{use=structure,fg=black,bg=structure.fg}
\setbeamercolor*{palette secondary}{use=structure,fg=white,bg=structure.fg!85!black}
\setbeamercolor*{palette tertiary}{use=structure,fg=white,bg=structure.fg!50!black}
\setbeamercolor*{palette quaternary}{fg=white,bg=black}

\definecolor{nocolor}{RGB}{255,255,255}
\definecolor{lowOpacity}{RGB}{110,110,110}
